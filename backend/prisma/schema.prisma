generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id              Int               @id @default(autoincrement())
  name            String
  ownerId         Int               @unique
  createdAt       DateTime          @default(now())
  owner           User              @relation("BusinessOwner", fields: [ownerId], references: [id])
  customer        Customer[]
  debts           Debt[]
  externalInvoice ExternalInvoice[]
  users           User[]            @relation("BusinessUsers")
  shop            Shop[]
  shopProduct     ShopProduct[]
}

model User {
  id              Int               @id @default(autoincrement())
  fullName        String
  email           String            @unique
  password        String
  role            Role
  businessId      Int?
  createdAt       DateTime          @default(now())
  ownedBusiness   Business?         @relation("BusinessOwner")
  externalInvoice ExternalInvoice[]
  sale            Sale[]
  sessions        Session[]
  pushToken       PushToken[]

  debtPayments    DebtPayment[]     @relation("DebtPaymentCreatedBy")
  business        Business?         @relation("BusinessUsers", fields: [businessId], references: [id])
}

model Session {
  id        String   @id @default(uuid())
  userId    Int
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

model Shop {
  id              Int               @id @default(autoincrement())
  name            String
  location        String
  businessId      Int
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  sale            Sale[]
  business        Business          @relation(fields: [businessId], references: [id])
  goods           ShopProduct[]
}

model ShopProduct {
  id            Int        @id @default(autoincrement())
  name          String
  quantity      Int
  costPrice     Float
  sellingPrice  Float
  price         Float?
  shopId        Int
  businessId    Int?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  dateAdded    DateTime  @default(now())
  items         SaleItem[]
  shop          Shop      @relation(fields: [shopId], references: [id])
  business      Business?  @relation(fields: [businessId], references: [id])

  @@unique([name, shopId])
  @@index([shopId])
}

model Sale {
  id           Int        @id @default(autoincrement())
  shopId       Int
  soldById     Int
  customerId   Int?
  customerName String?
  total        Int
  amountPaid   Int?
  balance      Int?
  createdAt    DateTime    @default(now())
  customer     Customer?   @relation(fields: [customerId], references: [id])
  soldBy       User        @relation(fields: [soldById], references: [id])
  shop         Shop        @relation(fields: [shopId], references: [id])
  items        SaleItem[]

  @@index([shopId])
  @@index([createdAt])
}

model SaleItem {
  id             Int          @id @default(autoincrement())
  saleId         Int
  shopProductId  Int
  name           String?
  productId      Int?
  quantity       Int
  price          Int
  total          Int?
  sale           Sale         @relation(fields: [saleId], references: [id])
  shopProduct    ShopProduct  @relation(fields: [shopProductId], references: [id])
}

model Customer {
  id         Int      @id @default(autoincrement())
  fullName   String
  phone      String
  address    String?
  businessId Int
  createdAt  DateTime @default(now())
  business   Business @relation(fields: [businessId], references: [id])
  debts      Debt[]
  sale       Sale[]
}

model Debt {
  id          Int      @id @default(autoincrement())
  totalAmount Int
  amountPaid  Int      @default(0)
  balance     Int
  isCleared   Boolean  @default(false)
  customerId  Int
  businessId  Int
  createdAt   DateTime @default(now())
  business    Business @relation(fields: [businessId], references: [id])
  customer    Customer @relation(fields: [customerId], references: [id])
  payments    DebtPayment[]

  @@index([customerId])
}

model ExternalInvoice {
  id           Int                   @id @default(autoincrement())
  createdAt    DateTime              @default(now())
  businessId   Int
  createdById  Int
  customerName String
  status       InvoiceStatus         @default(DRAFT)
  total        Float
  Business     Business              @relation(fields: [businessId], references: [id])
  createdBy    User                  @relation(fields: [createdById], references: [id])
  items        ExternalInvoiceItem[]

  @@index([businessId])
}

model ExternalInvoiceItem {
  id        Int             @id @default(autoincrement())
  invoiceId Int
  name      String
  price     Float
  quantity  Int
  invoice   ExternalInvoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

enum Role {
  SUPERADMIN
  CLIENT
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
}


model PushToken {
  id         Int    @id @default(autoincrement())
  userId     Int    @unique
  token      String
  createdAt DateTime @default(now())
  updatedAt DateTime?   @updatedAt

  user User @relation(fields: [userId], references: [id])
}


model DebtPayment {
  id          Int             @id @default(autoincrement())
  debtId      Int
  amount      Int
  type        DebtPaymentType @default(PAYMENT)
  createdAt   DateTime        @default(now())
  createdById Int?
  debt        Debt            @relation(fields: [debtId], references: [id])
  createdBy   User?           @relation("DebtPaymentCreatedBy", fields: [createdById], references: [id])

  @@index([debtId])
  @@index([createdById])
}

enum DebtPaymentType {
  PAYMENT
  CLEAR
  OVERPAYMENT
}